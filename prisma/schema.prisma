generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int        @id @default(autoincrement())
  username   String     @unique
  email      String     @unique
  npm        String     @unique
  password   String
  role       String
  createdAt  DateTime   @map("created_at")
  dataSiswa  DataSiswa?
  dataDosen  DataDosen?
}

model DataSiswa {
  id          Int       @id @default(autoincrement())
  nama        String
  npm         String    @unique
  kelas       String
  nomorHp     String    @map("nomor_hp")
  alamat      String
  presensi    Presensi?
  faceData    FaceData?
  user        User      @relation(fields: [npm], references: [npm])
}

model DataDosen {
  id      Int          @id @default(autoincrement())
  nama    String  
  nidn    String       @unique
  kelas   String
  nomorHp String       @map("nomor_hp")
  alamat  String
  user    User         @relation(fields: [nidn], references: [npm])
}

model Presensi {
  id         Int       @id @default(autoincrement())
  tanggal    DateTime  @default(now()) @db.Timestamptz(6)
  nama       String
  npm        String    @unique
  waktuAbsen DateTime  @map("waktu_absen")
  status     String
  siswa      DataSiswa @relation(fields: [npm], references: [npm])
}

model FaceData {
  id             Int      @id @default(autoincrement())
  name           String
  npm            String   @unique
  faceDescriptor Json
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")
  dataSiswa      DataSiswa @relation(fields: [npm], references: [npm])
}